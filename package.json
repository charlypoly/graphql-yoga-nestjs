{
  "name": "@graphql-yoga/nestjs",
  "version": "0.0.1",
  "description": "Yoga driver for Nest GraphQL",
  "author": "Charly Poly <charly@the-guild.dev>",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "keywords": [
    "graphql",
    "server",
    "nestjs",
    "graphql-yoga"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "test": "jest --passWithNoTests --config ./tests/jest-e2e.ts --runInBand",
    "test:dev": "jest --passWithNoTests --config ./tests/jest-e2e.ts --runInBand --watch",
    "prepublishOnly": "yarn build",
    "clean": "rimraf dist",
    "postinstall": "patch-package",
    "prebuild": "yarn clean && yarn json-schema",
    "build": "bob build --single",
    "prepack": "bob prepack",
    "prettier": "prettier --ignore-path .gitignore --write --list-different .",
    "prettier:check": "prettier --ignore-path .gitignore --check .",
    "lint": "eslint --ignore-path .gitignore .",
    "prerelease": "yarn build",
    "release": "changeset publish",
    "release:canary": "ts-node --compiler-options='{\"module\":\"commonjs\"}' scripts/canary-release.ts && yarn build && yarn changeset publish --tag alpha"
  },
  "dependencies": {
    "@envelop/apollo-server-errors": "^3.3.1",
    "@graphql-yoga/node": "^2.3.0",
    "@nestjs/graphql": "^10.0.0"
  },
  "devDependencies": {
    "patch-package": "6.4.7",
    "rimraf": "3.0.2",
    "@changesets/cli": "2.22.0",
    "bob-the-bundler": "1.6.1",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.6.2",
    "@types/jest": "27.4.1",
    "jest": "^28.0.0",
    "supertest": "6.2.2",
    "ts-jest": "^28.0.0",
    "ts-node": "10.7.0",
    "ts-morph": "14.0.0",
    "typescript": "4.6.3",
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "@apollo/gateway": "0.50.1",
    "@apollo/subgraph": "^0.4.1",
    "@envelop/apollo-federation": "^2.3.1",
    "@nestjs/common": "8.4.4",
    "@nestjs/core": "8.4.4",
    "reflect-metadata": "0.1.13",
    "fastify": "^3.28.0",
    "graphql": "15.8.0",
    "graphql-subscriptions": "2.0.0",
    "@nestjs/platform-express": "8.4.4",
    "@nestjs/platform-fastify": "8.4.4",
    "rxjs": "7.5.5",
    "apollo-client": "2.6.10",
    "apollo-link-ws": "1.0.20",
    "apollo-cache-inmemory": "1.6.6",
    "@nestjs/testing": "8.4.4"
  },
  "peerDependencies": {
    "@apollo/gateway": "^0.44.1 || ^0.46.0 || ^0.48.0 || ^0.49.0 || ^0.50.0",
    "@apollo/subgraph": "^0.4.1",
    "@envelop/apollo-federation": "^2.3.1",
    "@nestjs/common": "^8.2.3",
    "@nestjs/core": "^8.2.3",
    "graphql": "^15.8.0 || ^16.0.0"
  },
  "peerDependenciesMeta": {
    "@apollo/gateway": {
      "optional": true
    },
    "@envelop/apollo-federation": {
      "optional": true
    },
    "@apollo/subgraph": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nestjs/graphql"
  },
  "lint-staged": {
    "{src,test}/**/*": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
